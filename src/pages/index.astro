---
import BaseLayout from "../layouts/BaseLayout.astro";

const socialLinks = [
  {
    name: "Spotify",
    icon: "spotify",
    href: "https://open.spotify.com/artist/YOUR_SPOTIFY_ARTIST_ID",
  },
  {
    name: "Apple Music",
    icon: "applemusic",
    href: "https://music.apple.com/artist/YOUR_APPLE_MUSIC_ARTIST_ID",
  },
  {
    name: "YouTube",
    icon: "youtube",
    href: "https://www.youtube.com/@YOUR_YOUTUBE_HANDLE",
  },
  {
    name: "Instagram",
    icon: "instagram",
    href: "https://www.instagram.com/YOUR_INSTAGRAM_HANDLE",
  },
  {
    name: "Facebook",
    icon: "facebook",
    href: "https://www.facebook.com/YOUR_FACEBOOK_PAGE",
  },
  {
    name: "SoundCloud",
    icon: "soundcloud",
    href: "https://soundcloud.com/YOUR_SOUNDCLOUD_PROFILE",
  },
];
---

<BaseLayout
  title="Your Name"
  description="Official website of Your Name."
  backgroundImage="/images/landing-bg.jpg"
>
  <section class="hero">
    <h1>Your Name</h1>
    <p>Direct links to all platforms.</p>

    <div class="social-grid">
      {
        socialLinks.map((item) => (
          <a
            class="social-link card"
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={item.name}
            title={item.name}
          >
            <img
              src={`/icons/social/${item.icon}.svg`}
              alt={item.name}
              loading="eager"
              width="34"
              height="34"
            />
            <span>{item.name}</span>
          </a>
        ))
      }
    </div>
  </section>

  <style>
    :global(.container) {
      padding-top: 0;
      padding-bottom: 0;
    }
    .hero {
      min-height: calc(
        var(--app-vh, 100svh) - var(--header-h, 80px) - var(--footer-h, 64px)
      );
      width: min(100%, 920px);
      margin: 0 auto;
      display: grid;
      align-content: center;
      justify-items: center;
      gap: clamp(14px, 2.2vh, 24px);
      text-align: center;
      padding: clamp(18px, 3vh, 36px) 0;
    }
    .hero h1 {
      margin: 0;
      font-size: clamp(42px, 11vw, 96px);
      font-family: "Avenir Next", "Helvetica Neue", "Segoe UI", sans-serif;
      font-weight: 500;
      letter-spacing: 0.12em;
      text-transform: none;
      color: rgba(224, 228, 235, 0.8);
      text-shadow: 0 16px 36px rgba(0, 0, 0, 0.45);
    }
    .hero p {
      margin: 0;
      max-width: 52ch;
      opacity: 0.88;
      font-size: clamp(14px, 2.8vw, 18px);
    }
    .social-grid {
      margin-top: clamp(8px, 2vh, 18px);
      width: 100%;
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 12px;
    }
    .social-link {
      text-decoration: none;
      display: grid;
      justify-items: center;
      align-content: center;
      gap: 10px;
      min-height: clamp(98px, 14vh, 130px);
      background: rgba(8, 13, 22, 0.42);
      border: 1px solid rgba(188, 216, 255, 0.28);
      backdrop-filter: blur(9px);
      -webkit-backdrop-filter: blur(9px);
      transition:
        transform 170ms ease,
        border-color 170ms ease;
    }
    .social-link img {
      width: 34px;
      height: 34px;
      display: block;
      filter: drop-shadow(0 4px 14px rgba(0, 0, 0, 0.35));
    }
    .social-link span {
      font-size: 13px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      opacity: 0.92;
    }
    .social-link:hover {
      transform: translateY(-2px);
      border-color: rgba(255, 255, 255, 0.6);
    }
    @media (max-width: 760px) {
      .social-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
      .hero {
        gap: clamp(10px, 1.8vh, 16px);
        padding: clamp(8px, 1.4vh, 14px) 0;
      }
      .hero h1 {
        font-size: clamp(30px, 10vw, 54px);
      }
      .hero p {
        font-size: clamp(12px, 3.5vw, 15px);
      }
      .social-link {
        gap: 7px;
        min-height: clamp(80px, 12vh, 98px);
      }
      .social-link img {
        width: 28px;
        height: 28px;
      }
      .social-link span {
        font-size: 11px;
      }
    }
    @media (max-height: 860px) {
      .hero {
        gap: clamp(8px, 1.4vh, 12px);
        padding: clamp(6px, 1.1vh, 10px) 0;
      }
      .social-grid {
        gap: 9px;
      }
      .social-link {
        min-height: clamp(72px, 10vh, 88px);
      }
      .social-link img {
        width: 26px;
        height: 26px;
      }
      .social-link span {
        font-size: 10px;
      }
    }
  </style>
</BaseLayout>
