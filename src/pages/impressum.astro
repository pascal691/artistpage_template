  <style>
    .legal {
      max-width: 860px;
      margin: 0 auto;
      padding-top: clamp(18px, 3vw, 34px);
      display: grid;
      gap: 10px;
      line-height: 1.65;
    }
    .legal h1 {
      margin: 0 0 8px;
      font-size: clamp(32px, 5vw, 48px);
    }
    .legal h2 {
      margin: 18px 0 2px;
      font-size: clamp(20px, 2.6vw, 28px);
    }
    .legal p {
      margin: 0;
    }
    .note {
      opacity: 0.78;
      font-size: 0.95rem;
    }
    @media (max-width: 760px) {
      .legal {
        padding-top: clamp(72px, 18vw, 120px);
      }
    }
  </style>
</BaseLayout>
